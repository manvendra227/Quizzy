<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/dimen_16"
        android:layout_height="@dimen/dimen_16"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_16"
        android:src="@drawable/ic_arrow_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_toEndOf="@id/back_button"
        android:fontFamily="@font/sen_bold"
        android:text="Create Quiz"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_text_18" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_marginEnd="@dimen/dimen_28"
                android:layout_marginBottom="@dimen/dimen_24"
                app:cardBackgroundColor="@color/back2"
                app:cardCornerRadius="@dimen/dimen_12"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_28"
                android:layout_marginTop="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_16"
                app:cardCornerRadius="@dimen/dimen_12"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/sen_bold"
                        android:text="Title for Quiz"
                        android:textColor="@color/title_black"
                        android:textSize="@dimen/dimen_text_14" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:minHeight="@dimen/dimen_40"
                        app:cardBackgroundColor="@color/edittext"
                        app:cardCornerRadius="@dimen/dimen_8"
                        app:cardElevation="@null"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/sen_reg"
                            android:inputType="textMultiLine"
                            android:minHeight="@dimen/dimen_44"
                            android:padding="@dimen/dimen_12"
                            android:textSize="@dimen/dimen_text_14" />
                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:src="@drawable/dashed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:fontFamily="@font/sen_bold"
                        android:text="Description"
                        android:textColor="@color/title_black"
                        android:textSize="@dimen/dimen_text_14" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/name_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:minHeight="@dimen/dimen_40"
                        app:cardBackgroundColor="@color/edittext"
                        app:cardCornerRadius="@dimen/dimen_8"
                        app:cardElevation="@null"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/desc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/sen_reg"
                            android:gravity="start"
                            android:inputType="textMultiLine"
                            android:minHeight="80dp"
                            android:padding="@dimen/dimen_12"
                            android:textSize="@dimen/dimen_text_14" />
                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:src="@drawable/dashed" />

                    <LinearLayout
                        android:id="@+id/selected_diff"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/diff_easy"
                            android:layout_marginEnd="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/switch_easy"
                            android:clickable="true"
                            android:scaleX=".57"
                            android:textOff=""
                            android:textOn="" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/diff_med"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/switch_med"
                            android:clickable="true"
                            android:scaleX=".57"
                            android:textOff=""
                            android:textOn="" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/diff_hard"
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/switch_hard"
                            android:clickable="true"
                            android:textOff=""
                            android:scaleX=".57"
                            android:textOn="" />
                    </LinearLayout>
                    <
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>