<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quizzy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#30D158</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/edittext</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="android:solidColor">@color/white</item>
        <item name="android:panelBackground">@color/back2</item>

    </style>


    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="errorToast">
        <item name="stColorBackground">#FF8881</item>
        <item name="stTextColor">#000</item>
        <item name="stIconStart">@drawable/ic_baseline_error_24</item>
        <item name="stStrokeColor">#000</item>
        <item name="stStrokeWidth">1.5dp</item>
        <item name="stLength">LONG</item>
        <item name="cornerRadius">3dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/sen_bold</item>
    </style>

</resources>