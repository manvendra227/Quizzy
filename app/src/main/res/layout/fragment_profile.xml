<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/dimen_16"
        android:layout_height="@dimen/dimen_16"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:src="@drawable/ic_arrow_left" />

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_toEndOf="@id/back_button"
        android:fontFamily="@font/sen_bold"
        android:text="@string/create_profile"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_text_18" />

<!--    <ImageView-->
<!--        android:id="@+id/edit"-->
<!--        android:layout_width="24dp"-->
<!--        android:layout_height="24dp"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_marginTop="14dp"-->
<!--        android:layout_marginEnd="@dimen/dimen_12"-->
<!--        android:src="@drawable/edit_clip" />-->
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_more_vert"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/dimen_12"
        android:backgroundTint="@android:color/transparent"
        android:onClick="showPopup"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bg_box"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"
                app:cardBackgroundColor="@color/light_lime_green"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/dashed_dotted_lines" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="18dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sec_box"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/dash_lines" />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pic_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                   android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="50dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/profile" />
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sen_bold"
                    android:layout_toRightOf="@+id/pic_profile"
                    android:textSize="18dp"
                    android:text="Dhruvraj Mishra"
                    android:layout_alignTop="@+id/pic_profile"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sen_regular"
                        android:layout_toRightOf="@+id/pic_profile"
                        android:text="Male | 20 years | Student"
                        android:layout_below="@+id/name"
                        android:textAlignment="center"
                        android:layout_marginTop="16dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>


