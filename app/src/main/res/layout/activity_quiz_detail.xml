<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="quizDetailViewModel"
            type="com.example.quizzy.viewModels.QuizDetailViewModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.SignUpActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:src="@drawable/ic_arrow_left"
        app:tint="?android:textColorPrimary" />

    <TextView
        android:id="@+id/back_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/back_button"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_toRightOf="@id/back_button"
        android:fontFamily="@font/sen_bold"
        android:text="Quiz Details"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/dimen_text_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="@dimen/dimen_20">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/master"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/card"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/back2"
                    app:cardCornerRadius="@dimen/dimen_12"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="@dimen/dimen_12"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/quizName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/sen_bold"
                            android:text="Basics of java"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="@dimen/dimen_text_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/clock"
                            android:layout_marginRight="@dimen/dimen_4"
                            android:layout_toLeftOf="@+id/clock"
                            android:fontFamily="@font/sen_bold"
                            android:text="15 min"
                            android:textColor="@color/button_red"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/clock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/quizName"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="12dp" />

                        <TextView
                            android:id="@+id/dicreption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/quizName"
                            android:layout_alignStart="@+id/quizName"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="@font/sen_regular"
                            android:text="@string/quiz_discreption"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/rules"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dicreption"
                            android:layout_alignStart="@+id/quizName"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/sen_bold"
                            android:text="Rules"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/circles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rules"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="@dimen/dimen_0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    app:cardCornerRadius="100dp"
                                    app:strokeColor="@color/easy"
                                    app:strokeWidth="3dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sen_bold"
                                        android:text="15"
                                        android:textColor="@color/easy"
                                        android:textSize="18sp" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/sen_regular"
                                    android:text="MCQ's"
                                    android:textColor="@color/black"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/dimen_0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    app:cardCornerRadius="100dp"
                                    app:strokeColor="@color/dark_green"
                                    app:strokeWidth="3dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sen_bold"
                                        android:text="+10"
                                        android:textColor="@color/dark_green"
                                        android:textSize="18sp" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/sen_regular"
                                    android:text="Correct"
                                    android:textColor="@color/black"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/dimen_0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    app:cardCornerRadius="100dp"
                                    app:strokeColor="@color/poppy_red"
                                    app:strokeWidth="3dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sen_bold"
                                        android:text="-2"
                                        android:textColor="@color/poppy_red"
                                        android:textSize="18sp" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/sen_regular"
                                    android:text="Incorrect"
                                    android:textColor="@color/black"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/dimen_0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    app:cardCornerRadius="100dp"
                                    app:strokeColor="@color/medium"
                                    app:strokeWidth="3dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sen_bold"
                                        android:text="50"
                                        android:textColor="@color/medium"
                                        android:textSize="18sp" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/sen_regular"
                                    android:gravity="center"
                                    android:text="Passing"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/dimen_0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    app:cardCornerRadius="100dp"
                                    app:strokeColor="@color/violet"
                                    app:strokeWidth="3dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sen_bold"
                                        android:text="15"
                                        android:textColor="@color/violet"
                                        android:textSize="18sp" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/sen_regular"
                                    android:text="Max Score"
                                    android:textColor="@color/black"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/circles"
                            android:layout_alignStart="@+id/quizName"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/sen_bold"
                            android:text="Details"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/bullet1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/details"
                            android:layout_alignStart="@+id/quizName"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/sen_regular"
                            android:text="@string/details1"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/bullet2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bullet1"
                            android:layout_alignStart="@+id/quizName"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/sen_regular"
                            android:text="@string/details2"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/bullet3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bullet2"
                            android:layout_alignStart="@+id/quizName"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/sen_regular"
                            android:text="@string/details3"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/bullet4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bullet3"
                            android:layout_alignStart="@+id/quizName"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/sen_regular"
                            android:text="@string/details4"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/bullet5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bullet4"
                            android:layout_alignStart="@+id/quizName"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/sen_regular"
                            android:text="@string/details5"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tags"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bullet5"
                            android:layout_alignStart="@+id/details"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/sen_bold"
                            android:text="Tags"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="16sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/tag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/tags"
                            android:layout_toRightOf="@id/tags"
                            android:orientation="horizontal"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/response"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tags"
                            android:layout_alignStart="@+id/quizName"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/sen_regular"
                            android:text="@string/response"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/button"
                            android:layout_width="170dp"
                            android:layout_height="54dp"
                            android:layout_below="@+id/response"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            android:background="@android:color/transparent">

                            <RelativeLayout
                                android:id="@+id/button1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_blue"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/sen_bold"
                                    android:layout_marginStart="4dp"
                                    android:text="Re-Attempt"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    app:backgroundTint="@color/button_blue"
                                    app:cornerRadius="9dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="4dp"
                                android:layout_alignBottom="@+id/button1"
                                android:background="@drawable/transparent_background" />
                        </RelativeLayout>

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
</layout>

