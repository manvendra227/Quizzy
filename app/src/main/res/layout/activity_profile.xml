<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="profileViewModel"
            type="com.example.quizzy.viewModels.ProfileViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Screens.SignUpActivity">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/dimen_16"
            android:layout_height="@dimen/dimen_16"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_toEndOf="@id/back_button"
            android:fontFamily="@font/sen_bold"
            android:text="@string/create_profile"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_text_18" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="@dimen/dimen_12"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_more_vert" />

        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/bg_box"
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="100dp"
                    app:cardBackgroundColor="@color/light_lime_green"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/dashed_dotted_lines" />

                    <LinearLayout
                        android:layout_marginBottom="12dp"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/noOfQuestions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/sen_regular"
                                android:text="460"
                                android:textColor="@color/blue"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-2dp"
                                android:fontFamily="@font/sen_regular"
                                android:text="solved questions"
                                android:textColor="@color/blue"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/accuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/sen_regular"
                                android:text="58.12%"
                                android:textColor="@color/blue"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-2dp"
                                android:fontFamily="@font/sen_regular"
                                android:text="Accuracy"
                                android:textColor="@color/blue"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/activedays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/sen_regular"
                                android:text="112"
                                android:textColor="@color/blue"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-2dp"
                                android:fontFamily="@font/sen_regular"
                                android:text="active days"
                                android:textColor="@color/blue"
                                android:textSize="10sp" />
                        </LinearLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sec_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true">

                        <RelativeLayout
                            android:id="@+id/box_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/pic_profile"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="15dp"
                                app:cardCornerRadius="50dp"
                                app:strokeColor="@color/black"
                                app:strokeWidth="1dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/profile" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/pic_profile"
                                android:layout_marginTop="12dp"
                                android:layout_toRightOf="@+id/pic_profile"
                                android:ellipsize="end"
                                android:fontFamily="@font/sen_bold"
                                android:maxLines="1"
                                android:text="Manvendra Pratap singh "
                                android:textAlignment="center"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/name"
                                android:layout_marginTop="16dp"
                                android:layout_toRightOf="@+id/pic_profile"
                                android:fontFamily="@font/sen_regular"
                                android:text="Male | 20 years | Student"
                                android:textAlignment="center"
                                android:textSize="13sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_below="@id/box_1"
                            android:layout_marginTop="12dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layerType="software"
                                android:src="@drawable/dash_lines" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:weightSum="10">


                                <RelativeLayout
                                    android:id="@+id/button_prev"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_weight="5">

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/button_blue1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="3dp"
                                        android:clickable="true"
                                        android:elevation="5dp"
                                        android:focusable="true"
                                        android:fontFamily="@font/sen_bold"
                                        android:text="Uploads"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="13sp"
                                        app:backgroundTint="@color/medium"
                                        app:cornerRadius="20dp" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/transparent_background3"
                                        android:elevation="10dp"
                                        app:strokeColor="@color/black"
                                        app:strokeWidth="1dp" />
                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/button_next"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_weight="5">

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/button_blue2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="3dp"
                                        android:clickable="true"
                                        android:elevation="5dp"
                                        android:fontFamily="@font/sen_bold"
                                        android:text="Email"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="13sp"
                                        app:backgroundTint="@color/button_red"
                                        app:cornerRadius="20dp" />


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/transparent_background3"
                                        android:elevation="10dp"
                                        app:strokeColor="@color/black"
                                        app:strokeWidth="1dp" />
                                </RelativeLayout>

                            </LinearLayout>


                        </RelativeLayout>


                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>


        </RelativeLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/user_attempt_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/sen_bold"
                    android:text="Recent Attempts"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/arrow_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_close" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/user_attempt_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="48dp"
                    tools:itemCount="2"
                    android:visibility="gone"
                    tools:listitem="@layout/list_item_user_attempts" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</layout>
