<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quizzy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/title_black</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/cardview_dark_background</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:solidColor">@color/black</item>
        <item name="android:panelBackground">@color/black</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>


    <style name="errorToast">
        <item name="stColorBackground">#FF8881</item>
        <item name="stTextColor">#FFF</item>
        <item name="stIconStart">@drawable/ic_baseline_error_24</item>
        <item name="startIconTint">#fff</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stStrokeWidth">1.5dp</item>
        <item name="stLength">LONG</item>
        <item name="cornerRadius">3dp</item>
    </style>
</resources>